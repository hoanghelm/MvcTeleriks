@* Part E - Review & Comment By Head LOB *@

<div class="bg-white shadow-md rounded-lg p-6">
    <div class="mb-6">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Part E - Review & Comment By Head LOB</h3>
    </div>

    <div ng-show="vm.partE.validationMessage" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        {{ vm.partE.validationMessage }}
    </div>

    <div ng-show="vm.partE.successMessage" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        {{ vm.partE.successMessage }}
    </div>

    <form name="partEForm" novalidate>
        <fieldset class="border border-gray-300 rounded-lg p-6 bg-gray-50">
            <legend class="text-lg font-semibold text-gray-900 px-2">Review & Comment Details</legend>

            <div class="space-y-6">
                <div class="form-group">
                    <label for="partE_comments" class="block text-sm font-medium text-gray-700 mb-1 required">
                        Review & Comment
                    </label>
                    <textarea kendo-text-area
                              k-ng-model="vm.partE.comments"
                              k-rows="6"
                              id="partE_comments"
                              name="partEComments"
                              class="w-full"
                              k-enable="!vm.partE.isReadOnly"
                              maxlength="4000"
                              required></textarea>
                    <div class="flex justify-between items-center mt-1">
                        <span class="text-red-600 text-sm" ng-show="!vm.partE.isReadOnly && partEForm.partEComments.$touched && partEForm.partEComments.$invalid">
                            Review & Comment is required
                        </span>
                        <span class="text-sm text-gray-500">{{ vm.partE.comments ? vm.partE.comments.length : 0 }} / 4000 characters</span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                        <p class="mt-1 text-gray-900">{{ vm.partE.submitterName || vm.currentUser.name }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Employee Number</label>
                        <p class="mt-1 text-gray-900">{{ vm.partE.submitterEmpId || vm.currentUser.userId }}</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Designation</label>
                        <p class="mt-1 text-gray-900">{{ vm.partE.submitterDesignation || vm.currentUser.designation }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Date of Submission</label>
                        <p class="mt-1 text-gray-900">{{ vm.partE.submissionDate || vm.getCurrentDate() }}</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6" ng-show="!vm.partE.isReadOnly">
                    <div class="form-group">
                        <label for="partE_wsho" class="block text-sm font-medium text-gray-700 mb-1">
                            Name of WSHO
                        </label>
                        <select kendo-drop-down-list
                                k-options="vm.partE.wshoOptions"
                                k-ng-model="vm.partE.wshoId"
                                id="partE_wsho"
                                name="partEWsho"
                                class="w-full">
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="partE_hod" class="block text-sm font-medium text-gray-700 mb-1">
                            Name of HOD
                        </label>
                        <select kendo-drop-down-list
                                k-options="vm.partE.hodOptions"
                                k-ng-model="vm.partE.hodId"
                                id="partE_hod"
                                name="partEHod"
                                class="w-full">
                        </select>
                    </div>
                </div>

                <div ng-show="!vm.partE.isReadOnly">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Copy To</label>
                    <div class="space-y-2 mb-3">
                        <div ng-repeat="person in vm.emailToListPartE" class="flex items-center">
                            <input type="checkbox"
                                   id="emailToPartE{{ $index }}"
                                   ng-model="person.selected"
                                   class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                            <label for="emailToPartE{{ $index }}" class="ml-2 block text-sm text-gray-700">
                                {{ person.name }} ({{ person.designation }})
                            </label>
                        </div>
                    </div>

                    <div class="mt-3">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div class="form-group">
                                <label for="partE_copyToName" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                                <div class="flex gap-2">
                                    <input type="text"
                                           ng-model="vm.partE.copyToPerson.name"
                                           id="partE_copyToName"
                                           class="form-control w-full px-3 py-2 border border-gray-300 rounded" />
                                    <button type="button"
                                            ng-click="vm.searchPartECopyTo()"
                                            class="px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700">
                                        ...
                                    </button>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="partE_copyToEmpNo" class="block text-sm font-medium text-gray-700 mb-1">Employee Number</label>
                                <input type="text"
                                       ng-model="vm.partE.copyToPerson.employeeNo"
                                       id="partE_copyToEmpNo"
                                       class="form-control w-full px-3 py-2 border border-gray-300 rounded" />
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label for="partE_copyToDesignation" class="block text-sm font-medium text-gray-700 mb-1">Designation</label>
                            <div class="flex gap-2">
                                <input type="text"
                                       ng-model="vm.partE.copyToPerson.designation"
                                       id="partE_copyToDesignation"
                                       class="form-control w-full px-3 py-2 border border-gray-300 rounded" />
                                <button type="button"
                                        ng-click="vm.addPartECopyTo()"
                                        class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                                    Add
                                </button>
                            </div>
                        </div>
                    </div>

                    <div ng-show="vm.partE.additionalCopyToList.length > 0" class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200 border border-gray-300">
                            <thead class="bg-gray-100">
                                <tr>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Employee No</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Name</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Designation</th>
                                    <th ng-show="!vm.partE.isReadOnly" class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Action</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <tr ng-repeat="person in vm.partE.additionalCopyToList">
                                    <td class="px-4 py-2 text-sm text-gray-900">{{ person.employeeNo }}</td>
                                    <td class="px-4 py-2 text-sm text-gray-900">{{ person.name }}</td>
                                    <td class="px-4 py-2 text-sm text-gray-900">{{ person.designation }}</td>
                                    <td ng-show="!vm.partE.isReadOnly" class="px-4 py-2 text-sm">
                                        <button type="button"
                                                ng-click="vm.removePartECopyToPerson($index)"
                                                class="text-red-600 hover:text-red-800">
                                            Remove
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200" ng-show="!vm.partE.isReadOnly">
                    <button type="button"
                            ng-click="vm.revertPartEToWSHO()"
                            ng-disabled="vm.partE.isSubmitting"
                            class="px-6 py-2 bg-yellow-600 text-white rounded-md hover:bg-yellow-700 disabled:bg-gray-400 disabled:cursor-not-allowed">
                        <span ng-show="!vm.partE.isSubmitting">Revert to WSHO</span>
                        <span ng-show="vm.partE.isSubmitting">
                            <i class="fas fa-spinner fa-spin mr-2"></i>Processing...
                        </span>
                    </button>
                    <button type="button"
                            ng-click="vm.approveAndSubmitPartE()"
                            ng-disabled="vm.partE.isSubmitting"
                            class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 disabled:bg-gray-400 disabled:cursor-not-allowed">
                        <span ng-show="!vm.partE.isSubmitting">Approve & submit to HOD</span>
                        <span ng-show="vm.partE.isSubmitting">
                            <i class="fas fa-spinner fa-spin mr-2"></i>Submitting...
                        </span>
                    </button>
                </div>

                <div class="mt-6" ng-show="vm.getWorkflowsByAction('05').length > 0">
                    <table class="min-w-full divide-y divide-gray-200 border border-gray-300">
                        <thead class="bg-gray-100">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">To</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Designation</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Date of Submission</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Remarks</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <tr ng-repeat="workflow in vm.getWorkflowsByAction('05')">
                                <td class="px-4 py-3 text-sm text-gray-900">
                                    <div ng-bind-html="workflow.toName || 'N/A'"></div>
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-900">
                                    <div ng-bind-html="workflow.toDesignation || 'N/A'"></div>
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-900">
                                    {{workflow.date | date:'dd-MMM-yyyy HH:mm' || 'N/A'}}
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-900">
                                    <div>{{ workflow.remarks }}</div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </fieldset>
    </form>
</div>
