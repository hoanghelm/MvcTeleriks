<div class="part-a-container">
    <h3 class="text-xl font-semibold mb-4 text-gray-700">Part A - Incident Report Details</h3>

    <div class="space-y-6">
        <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="font-semibold text-gray-700 mb-3">Incident Information</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-600">Incident ID</label>
                    <p class="mt-1 text-gray-900">{{ vm.incident.incidentId }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-600">Incident Date & Time</label>
                    <p class="mt-1 text-gray-900">{{ vm.incident.incidentDateTime }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-600">Incident Type</label>
                    <p class="mt-1 text-gray-900">{{ vm.getIncidentTypeText() }}</p>
                </div>
            </div>
        </div>

        <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="font-semibold text-gray-700 mb-3">Organization Details</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-600">Sector/SBA</label>
                    <p class="mt-1 text-gray-900">{{ vm.incident.sbaName }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-600">LOB/SBU</label>
                    <p class="mt-1 text-gray-900">{{ vm.incident.sbuName }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-600">Department</label>
                    <p class="mt-1 text-gray-900">{{ vm.incident.departmentName }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-600">Location</label>
                    <p class="mt-1 text-gray-900">{{ vm.incident.locationName }}</p>
                </div>
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-600">Exact Location</label>
                    <p class="mt-1 text-gray-900">{{ vm.incident.exactLocation }}</p>
                </div>
            </div>
        </div>

        <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="font-semibold text-gray-700 mb-3">Incident Description</h4>
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-600">Description of Incident</label>
                    <p class="mt-1 text-gray-900 whitespace-pre-wrap">{{ vm.incident.incidentDesc }}</p>
                </div>
                <div ng-show="vm.incident.damageDescription">
                    <label class="block text-sm font-medium text-gray-600">Description of Damage</label>
                    <p class="mt-1 text-gray-900 whitespace-pre-wrap">{{ vm.incident.damageDescription }}</p>
                </div>
            </div>
        </div>

        <div class="bg-gray-50 p-4 rounded-lg" ng-show="vm.incident.injuredPersons && vm.incident.injuredPersons.length > 0">
            <h4 class="font-semibold text-gray-700 mb-3">Injured Persons</h4>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Name</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Employee No</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Designation</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Contact No</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Age</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Type</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <tr ng-repeat="person in vm.incident.injuredPersons">
                            <td class="px-4 py-2 text-sm text-gray-900">{{ person.name }}</td>
                            <td class="px-4 py-2 text-sm text-gray-900">{{ person.employeeNo }}</td>
                            <td class="px-4 py-2 text-sm text-gray-900">{{ person.designation }}</td>
                            <td class="px-4 py-2 text-sm text-gray-900">{{ person.contactNo }}</td>
                            <td class="px-4 py-2 text-sm text-gray-900">{{ person.age }}</td>
                            <td class="px-4 py-2 text-sm text-gray-900">{{ person.type === 'E' ? 'Employee' : 'Non-Employee' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="bg-gray-50 p-4 rounded-lg" ng-show="vm.incident.eyewitnesses && vm.incident.eyewitnesses.length > 0">
            <h4 class="font-semibold text-gray-700 mb-3">Eye Witnesses</h4>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Name</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Employee No</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Designation</th>
                            <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Contact No</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <tr ng-repeat="witness in vm.incident.eyewitnesses">
                            <td class="px-4 py-2 text-sm text-gray-900">{{ witness.name }}</td>
                            <td class="px-4 py-2 text-sm text-gray-900">{{ witness.employeeNo }}</td>
                            <td class="px-4 py-2 text-sm text-gray-900">{{ witness.designation }}</td>
                            <td class="px-4 py-2 text-sm text-gray-900">{{ witness.contactNo }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="font-semibold text-gray-700 mb-3">Additional Information</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-600">Job Related</label>
                    <p class="mt-1 text-gray-900">{{ vm.incident.isJobrelated === 'Y' ? 'Yes' : 'No' }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-600">Working Overtime</label>
                    <p class="mt-1 text-gray-900">{{ vm.incident.isWorkingOvertime === 'Y' ? 'Yes' : 'No' }}</p>
                </div>
                <div ng-show="vm.incident.officialWorkingHrs">
                    <label class="block text-sm font-medium text-gray-600">Official Working Hours</label>
                    <p class="mt-1 text-gray-900">{{ vm.incident.officialWorkingHrs }}</p>
                </div>
                <div ng-show="vm.incident.examinedHospitalClinicName">
                    <label class="block text-sm font-medium text-gray-600">Hospital/Clinic Name</label>
                    <p class="mt-1 text-gray-900">{{ vm.incident.examinedHospitalClinicName }}</p>
                </div>
            </div>
        </div>

        <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="font-semibold text-gray-700 mb-3">Reported By</h4>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-600">Name</label>
                    <p class="mt-1 text-gray-900">{{ vm.incident.superiorName }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-600">Employee No</label>
                    <p class="mt-1 text-gray-900">{{ vm.incident.superiorEmpNo }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-600">Designation</label>
                    <p class="mt-1 text-gray-900">{{ vm.incident.superiorDesignation }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
