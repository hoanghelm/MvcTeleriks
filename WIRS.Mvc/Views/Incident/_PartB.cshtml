<div class="part-b-container">
    <h3 class="text-xl font-semibold mb-4 text-gray-700">Part B - HOD Review</h3>

    <div ng-show="vm.partB.isReadOnly">
        <div class="space-y-6">
            <div class="bg-gray-50 p-4 rounded-lg">
                <h4 class="font-semibold text-gray-700 mb-3">Review Information</h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-600">Injured Case Type</label>
                        <p class="mt-1 text-gray-900">{{ vm.getInjuredCaseTypeText() }}</p>
                    </div>
                </div>
                <div class="mt-4">
                    <label class="block text-sm font-medium text-gray-600">HOD Review and Comment</label>
                    <p class="mt-1 text-gray-900 whitespace-pre-wrap bg-white p-3 rounded border">{{ vm.partB.reviewComment }}</p>
                </div>
            </div>

            <div class="bg-gray-50 p-4 rounded-lg">
                <h4 class="font-semibold text-gray-700 mb-3">Reviewed By</h4>
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-600">Name</label>
                        <p class="mt-1 text-gray-900">{{ vm.partB.submitterName }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-600">Employee ID</label>
                        <p class="mt-1 text-gray-900">{{ vm.partB.submitterEmpId }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-600">Designation</label>
                        <p class="mt-1 text-gray-900">{{ vm.partB.submitterDesignation }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-600">Submission Date</label>
                        <p class="mt-1 text-gray-900">{{ vm.partB.submissionDate }}</p>
                    </div>
                </div>
            </div>

            <div class="mt-6" ng-show="vm.getWorkflowsByAction('02').length > 0">
                <table class="min-w-full divide-y divide-gray-200 border border-gray-300">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">To</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Designation</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Date of Submission</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <tr ng-repeat="workflow in vm.getWorkflowsByAction('02')">
                            <td class="px-4 py-3 text-sm text-gray-900">
                                <div ng-bind-html="workflow.toName || 'N/A'"></div>
                            </td>
                            <td class="px-4 py-3 text-sm text-gray-900">
                                <div ng-bind-html="workflow.toDesignation || 'N/A'"></div>
                            </td>
                            <td class="px-4 py-3 text-sm text-gray-900">
                                {{workflow.date | date:'dd-MMM-yyyy HH:mm' || 'N/A'}}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div ng-show="!vm.partB.isReadOnly && vm.canEditPartB()">
        <form name="partBForm" ng-submit="vm.submitPartB()" novalidate>
            <div class="space-y-6">
                <div class="bg-gray-50 p-4 rounded-lg">
                    <h4 class="font-semibold text-gray-700 mb-3">Incident Case Type Classification</h4>
                    <div class="space-y-2">
                        <label class="block text-sm font-medium text-gray-700 required">Injured Case Type</label>
                        <div class="space-y-2">
                            <div ng-repeat="caseType in vm.injuredCaseTypes" class="flex items-center">
                                <input type="radio"
                                       id="caseType{{ $index }}"
                                       name="injuredCaseType"
                                       ng-model="vm.partB.injuredCaseType"
                                       ng-value="caseType.code"
                                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300">
                                <label for="caseType{{ $index }}" class="ml-2 block text-sm text-gray-700">
                                    {{ caseType.value }}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-50 p-4 rounded-lg">
                    <h4 class="font-semibold text-gray-700 mb-3">HOD Review and Comments</h4>
                    <div>
                        <label for="reviewComment" class="block text-sm font-medium text-gray-700 required">Review and Comment</label>
                        <textarea id="reviewComment"
                                  name="reviewComment"
                                  ng-model="vm.partB.reviewComment"
                                  rows="5"
                                  class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                                  required></textarea>
                        <span class="text-red-600 text-sm" ng-show="partBForm.reviewComment.$touched && partBForm.reviewComment.$invalid">
                            Review and Comment is required (ERR-134)
                        </span>
                    </div>
                </div>

                <div class="bg-gray-50 p-4 rounded-lg">
                    <h4 class="font-semibold text-gray-700 mb-3">Workflow Assignment</h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="wsho" class="block text-sm font-medium text-gray-700 required">WSHO</label>
                            <select id="wsho"
                                    name="wsho"
                                    ng-model="vm.partB.wshoId"
                                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                                    required>
                                <option value="">-- Select WSHO --</option>
                                <option ng-repeat="wsho in vm.wshoList" value="{{ wsho.id }}">{{ wsho.name }}</option>
                            </select>
                            <span class="text-red-600 text-sm" ng-show="partBForm.wsho.$touched && partBForm.wsho.$invalid">
                                WSHO selection is required (ERR-135)
                            </span>
                        </div>
                        <div>
                            <label for="alternateWsho" class="block text-sm font-medium text-gray-700">Alternate WSHO</label>
                            <select id="alternateWsho"
                                    name="alternateWsho"
                                    ng-model="vm.partB.alternateWshoId"
                                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                                <option value="">-- Select Alternate WSHO --</option>
                                <option ng-repeat="awsho in vm.alternateWshoList" value="{{ awsho.id }}">{{ awsho.name }}</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-50 p-4 rounded-lg">
                    <h4 class="font-semibold text-gray-700 mb-3">CC/Email To List</h4>
                    <div class="space-y-2">
                        <div ng-repeat="person in vm.emailToList" class="flex items-center">
                            <input type="checkbox"
                                   id="emailTo{{ $index }}"
                                   ng-model="person.selected"
                                   class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                            <label for="emailTo{{ $index }}" class="ml-2 block text-sm text-gray-700">
                                {{ person.name }} ({{ person.designation }})
                            </label>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h5 class="text-sm font-medium text-gray-700 mb-2">Additional Copy To</h5>
                        <div class="mb-2">
                            <button type="button"
                                    ng-click="vm.openEmployeeSearch('partB')"
                                    class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                                Add Person
                            </button>
                        </div>
                        <div ng-show="vm.partB.additionalCopyToList.length > 0" class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-100">
                                    <tr>
                                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Employee No</th>
                                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Name</th>
                                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Designation</th>
                                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Action</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    <tr ng-repeat="person in vm.partB.additionalCopyToList">
                                        <td class="px-4 py-2 text-sm text-gray-900">{{ person.employeeNo }}</td>
                                        <td class="px-4 py-2 text-sm text-gray-900">{{ person.name }}</td>
                                        <td class="px-4 py-2 text-sm text-gray-900">{{ person.designation }}</td>
                                        <td class="px-4 py-2 text-sm">
                                            <button type="button"
                                                    ng-click="vm.removeCopyToPerson($index)"
                                                    class="text-red-600 hover:text-red-800">
                                                Remove
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-50 p-4 rounded-lg">
                    <h4 class="font-semibold text-gray-700 mb-3">Submitter Information</h4>
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-600">Name</label>
                            <p class="mt-1 text-gray-900">{{ vm.currentUser.name }}</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-600">Employee ID</label>
                            <p class="mt-1 text-gray-900">{{ vm.currentUser.userId }}</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-600">Designation</label>
                            <p class="mt-1 text-gray-900">{{ vm.currentUser.designation }}</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-600">Date of Submission</label>
                            <p class="mt-1 text-gray-900">{{ vm.getCurrentDate() }}</p>
                        </div>
                    </div>
                </div>

                <div ng-show="vm.partB.validationMessage" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
                    {{ vm.partB.validationMessage }}
                </div>

                <div class="flex justify-end space-x-4">
                    <button type="button"
                            ng-click="vm.cancel()"
                            class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        Cancel
                    </button>
                    <button type="submit"
                            ng-disabled="partBForm.$invalid || vm.partB.submitting"
                            class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed">
                        <span ng-show="!vm.partB.submitting">Submit Review</span>
                        <span ng-show="vm.partB.submitting">Submitting...</span>
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div ng-show="!vm.canEditPartB() && !vm.partB.isReadOnly" class="bg-yellow-50 border border-yellow-400 text-yellow-700 px-4 py-3 rounded">
        You do not have permission to edit Part B. Only the assigned HOD can review and submit this section.
    </div>
</div>