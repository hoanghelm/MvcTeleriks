<div class="part-b-container bg-white shadow-md rounded-lg p-6">
    <form name="partBForm" ng-submit="vm.submitPartB()" novalidate>
        <fieldset class="border border-gray-300 rounded-lg p-6 bg-gray-50">
            <legend class="text-lg font-semibold text-gray-900 px-2">Part B - Review By Head of Department</legend>

            <div class="space-y-6">
                <div>
                    <label for="partB_reviewComment" class="block text-sm font-medium text-gray-700 mb-1 required">Review and Comment</label>
                    <textarea kendo-text-area
                              k-ng-model="vm.partB.reviewComment"
                              k-rows="5"
                              id="partB_reviewComment"
                              name="reviewComment"
                              style="width: 100%;"
                              k-enable="!vm.partB.isReadOnly"
                              required></textarea>
                    <span class="text-red-600 text-sm" ng-show="partBForm.reviewComment.$touched && partBForm.reviewComment.$invalid">
                        Review and Comment is required (ERR-134)
                    </span>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Type of Injured Case</label>
                    <div class="space-y-2">
                        <div ng-repeat="caseType in vm.injuredCaseTypes" class="flex items-center">
                            <input type="radio"
                                   id="caseType{{ $index }}"
                                   name="injuredCaseType"
                                   ng-model="vm.partB.injuredCaseType"
                                   ng-value="caseType.code"
                                   ng-disabled="vm.partB.isReadOnly"
                                   class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300">
                            <label for="caseType{{ $index }}" class="ml-2 block text-sm text-gray-700">
                                {{ caseType.value }}
                            </label>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="form-group">
                        <label for="partB_wsho" class="block text-sm font-medium text-gray-700 mb-1 required">Name of WSHO</label>
                        <select kendo-drop-down-list
                                k-options="vm.partB.wshoOptions"
                                k-ng-model="vm.partB.wshoId"
                                id="partB_wsho"
                                name="wsho"
                                class="w-full"
                                k-enable="!vm.partB.isReadOnly"
                                required>
                        </select>
                        <span class="text-red-600 text-sm" ng-show="partBForm.wsho.$touched && partBForm.wsho.$invalid">
                            WSHO selection is required (ERR-135)
                        </span>
                    </div>
                    <div class="form-group">
                        <label for="partB_alternateWsho" class="block text-sm font-medium text-gray-700 mb-1">Alternate to WSHO</label>
                        <select kendo-drop-down-list
                                k-options="vm.partB.alternateWshoOptions"
                                k-ng-model="vm.partB.alternateWshoId"
                                id="partB_alternateWsho"
                                class="w-full"
                                k-enable="!vm.partB.isReadOnly">
                        </select>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Copy To</label>
                    <div class="space-y-2 mb-3">
                        <div ng-repeat="person in vm.emailToList" class="flex items-center">
                            <input type="checkbox"
                                   id="emailTo{{ $index }}"
                                   ng-model="person.selected"
                                   ng-disabled="vm.partB.isReadOnly"
                                   class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                            <label for="emailTo{{ $index }}" class="ml-2 block text-sm text-gray-700">
                                {{ person.name }} ({{ person.designation }})
                            </label>
                        </div>
                    </div>

                    <div class="mt-3" ng-show="!vm.partB.isReadOnly">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div class="form-group">
                                <label for="partB_copyToName" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                                <div class="flex gap-2">
                                    <input kendo-text-box
                                           k-ng-model="vm.partB.copyToPerson.name"
                                           id="partB_copyToName"
                                           style="width: 100%;" />
                                    <button type="button"
                                            ng-click="vm.searchPartBCopyTo()"
                                            class="px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700">
                                        ...
                                    </button>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="partB_copyToEmpNo" class="block text-sm font-medium text-gray-700 mb-1">Employee Number</label>
                                <input kendo-text-box
                                       k-ng-model="vm.partB.copyToPerson.employeeNo"
                                       id="partB_copyToEmpNo"
                                       style="width: 100%;" />
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label for="partB_copyToDesignation" class="block text-sm font-medium text-gray-700 mb-1">Designation</label>
                            <input kendo-text-box
                                   k-ng-model="vm.partB.copyToPerson.designation"
                                   id="partB_copyToDesignation"
                                   style="width: 100%;" />
                        </div>

                        <div class="mb-4">
                            <button type="button"
                                    ng-click="vm.addPartBCopyTo()"
                                    class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                                Add
                            </button>
                        </div>
                    </div>

                    <div ng-show="vm.partB.additionalCopyToList.length > 0" class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200 border border-gray-300">
                                <thead class="bg-gray-100">
                                    <tr>
                                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Employee No</th>
                                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Name</th>
                                        <th class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Designation</th>
                                        <th ng-show="!vm.partB.isReadOnly" class="px-4 py-2 text-left text-xs font-medium text-gray-700 uppercase">Action</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200">
                                    <tr ng-repeat="person in vm.partB.additionalCopyToList">
                                        <td class="px-4 py-2 text-sm text-gray-900">{{ person.employeeNo }}</td>
                                        <td class="px-4 py-2 text-sm text-gray-900">{{ person.name }}</td>
                                        <td class="px-4 py-2 text-sm text-gray-900">{{ person.designation }}</td>
                                        <td ng-show="!vm.partB.isReadOnly" class="px-4 py-2 text-sm">
                                            <button type="button"
                                                    ng-click="vm.removeCopyToPerson($index)"
                                                    class="text-red-600 hover:text-red-800">
                                                Remove
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-600">Name</label>
                        <p class="mt-1 text-gray-900">{{ vm.currentUser.userName }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-600">Employee Number</label>
                        <p class="mt-1 text-gray-900">{{ vm.currentUser.userId }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-600">Designation</label>
                        <p class="mt-1 text-gray-900">{{ vm.currentUser.designation }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-600">Date of Submission</label>
                        <p class="mt-1 text-gray-900">{{ vm.getCurrentDate() }}</p>
                    </div>
                </div>

                <div ng-show="vm.partB.validationMessage" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
                    {{ vm.partB.validationMessage }}
                </div>

                <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200" ng-show="!vm.partB.isReadOnly">
                    <button type="button"
                            ng-click="vm.cancel()"
                            class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        Cancel
                    </button>
                    <button type="submit"
                            ng-disabled="partBForm.$invalid || vm.partB.submitting"
                            class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed">
                        <span ng-show="!vm.partB.submitting">Submit Review</span>
                        <span ng-show="vm.partB.submitting">Submitting...</span>
                    </button>
                </div>

                <div class="mt-6" ng-show="vm.getWorkflowsByAction('02').length > 0">
                    <h4 class="text-lg font-semibold text-gray-700 mb-3">Workflow History</h4>
                    <table class="min-w-full divide-y divide-gray-200 border border-gray-300">
                        <thead class="bg-gray-100">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">To</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Designation</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Date of Submission</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <tr ng-repeat="workflow in vm.getWorkflowsByAction('02')">
                                <td class="px-4 py-3 text-sm text-gray-900">
                                    <div ng-bind-html="workflow.toName || 'N/A'"></div>
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-900">
                                    <div ng-bind-html="workflow.toDesignation || 'N/A'"></div>
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-900">
                                    {{workflow.date | date:'dd-MMM-yyyy HH:mm' || 'N/A'}}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </fieldset>
    </form>
</div>