@{
    ViewData["Title"] = "Print Incident Report - " + (ViewBag.IncidentId ?? "");
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .error-message {
            background-color: #f8d7da;
            color: #721c24;
            padding: 15px;
            border: 1px solid #f5c6cb;
            border-radius: 4px;
            margin: 20px;
        }

        #pdf-frame {
            width: 100%;
            height: 100%;
            border: none;
        }
    </style>
</head>
<body>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="error-message">
            @ViewBag.ErrorMessage
        </div>
    }
    else
    {
        <iframe id="pdf-frame" src="/Incident/PrintContent?id=@ViewBag.IncidentId"></iframe>
    }
</body>
</html>
