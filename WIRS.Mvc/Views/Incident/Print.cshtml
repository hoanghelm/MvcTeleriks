@{
    ViewData["Title"] = "Print Incident Report - " + (ViewBag.IncidentId ?? "");
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            padding: 20px;
            background: white;
        }

        .print-container {
            max-width: 100%;
            margin: 0 auto;
        }

        .error-message {
            background-color: #f8d7da;
            color: #721c24;
            padding: 15px;
            border: 1px solid #f5c6cb;
            border-radius: 4px;
            margin-bottom: 20px;
        }

        .print-content {
            background: white;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 10px 0;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        @@media print {
            body {
                padding: 0;
            }

            .print-container {
                max-width: 100%;
            }
        }
    </style>
    <script>
        window.onload = function() {
            @if (!string.IsNullOrEmpty(ViewBag.HtmlContent))
            {
                @:setTimeout(function() {
                @:    window.print();
                @:}, 500);
            }
        };
    </script>
</head>
<body>
    <div class="print-container">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="error-message">
                @ViewBag.ErrorMessage
            </div>
        }

        <div class="print-content">
            @Html.Raw(ViewBag.HtmlContent)
        </div>
    </div>
</body>
</html>
