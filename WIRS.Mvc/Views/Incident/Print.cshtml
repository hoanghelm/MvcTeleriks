@{
    ViewData["Title"] = "Print Incident Report - " + (ViewBag.IncidentId ?? "");
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            padding: 20px;
            font-family: Arial, sans-serif;
        }
        .message {
            text-align: center;
            padding: 40px 20px;
        }
        .message h2 {
            color: #333;
            margin-bottom: 20px;
        }
        .message p {
            color: #666;
            margin-bottom: 30px;
        }
        .btn {
            display: inline-block;
            padding: 12px 30px;
            background: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }
        .btn:hover {
            background: #0056b3;
        }
    </style>
    <script>
        window.onload = function() {
            @if (!string.IsNullOrEmpty(ViewBag.HtmlContent))
            {
                @:setTimeout(function() {
                @:    window.print();
                @:}, 100);
            }
        };

        window.onafterprint = function() {
            document.getElementById('print-message').style.display = 'block';
        };
    </script>
</head>
<body>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="message">
            <h2>Error</h2>
            <p>@ViewBag.ErrorMessage</p>
        </div>
    }
    else
    {
        <div id="print-message" class="message" style="display: none;">
            <h2>Print to PDF</h2>
            <p>To view this report as a PDF in your browser:</p>
            <p>1. In the print dialog, select "Save as PDF" or "Microsoft Print to PDF" as the destination<br/>
               2. The PDF will open in your browser's PDF viewer</p>
            <button class="btn" onclick="window.print()">Open Print Dialog Again</button>
        </div>

        <div id="content">
            @Html.Raw(ViewBag.HtmlContent)
        </div>
    }
</body>
</html>
