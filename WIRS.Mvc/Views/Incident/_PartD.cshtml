@* Part D - Review & Comment By Chairman WSH Committee *@

<div class="bg-white shadow-md rounded-lg p-6">
    <div class="mb-6">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Part D - Review & Comment By Chairman WSH Committee</h3>
    </div>

    <div ng-show="vm.partD.validationMessage" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        {{ vm.partD.validationMessage }}
    </div>

    <div ng-show="vm.partD.successMessage" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        {{ vm.partD.successMessage }}
    </div>

    <form name="partDForm" novalidate>
        <fieldset class="border border-gray-300 rounded-lg p-6 bg-gray-50">
            <legend class="text-lg font-semibold text-gray-900 px-2">Review & Comment Details</legend>

            <div class="space-y-6">
                <div class="form-group">
                    <label for="partD_comments" class="block text-sm font-medium text-gray-700 mb-1 required">
                        Review & Comment
                    </label>
                    <textarea kendo-text-area
                              k-ng-model="vm.partD.comments"
                              k-rows="6"
                              id="partD_comments"
                              name="partDComments"
                              style="width: 100%;"
                              k-enable="!vm.partD.isReadOnly"
                              maxlength="4000"
                              required></textarea>
                    <div class="flex justify-between items-center mt-1">
                        <span class="text-red-600 text-sm" ng-show="!vm.partD.isReadOnly && partDForm.partDComments.$touched && partDForm.partDComments.$invalid">
                            Review & Comment is required
                        </span>
                        <span class="text-sm text-gray-500">{{ vm.partD.comments ? vm.partD.comments.length : 0 }} / 4000 characters</span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                        <p class="mt-1 text-gray-900">{{ vm.partD.submitterName || vm.currentUser.name }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Employee Number</label>
                        <p class="mt-1 text-gray-900">{{ vm.partD.submitterEmpId || vm.currentUser.userId }}</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Designation</label>
                        <p class="mt-1 text-gray-900">{{ vm.partD.submitterDesignation || vm.currentUser.designation }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Date of Submission</label>
                        <p class="mt-1 text-gray-900">{{ vm.partD.submissionDate || vm.getCurrentDate() }}</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6" ng-show="!vm.partD.isReadOnly">
                    <div class="form-group">
                        <label for="partD_wsho" class="block text-sm font-medium text-gray-700 mb-1">
                            Name of WSHO
                        </label>
                        <select kendo-drop-down-list
                                k-options="vm.partD.wshoOptions"
                                k-ng-model="vm.partD.wshoId"
                                id="partD_wsho"
                                name="partDWsho"
                                class="w-full">
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="partD_headlob" class="block text-sm font-medium text-gray-700 mb-1">
                            Name of Head LOB
                        </label>
                        <select kendo-drop-down-list
                                k-options="vm.partD.headLobOptions"
                                k-ng-model="vm.partD.headLobId"
                                id="partD_headlob"
                                name="partDHeadLob"
                                class="w-full">
                        </select>
                    </div>
                </div>

                <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200" ng-show="!vm.partD.isReadOnly && vm.canEditPartD()">
                    <button type="button"
                            ng-click="vm.revertToWSHO()"
                            ng-disabled="vm.partD.isSubmitting"
                            class="px-6 py-2 bg-yellow-600 text-white rounded-md hover:bg-yellow-700 disabled:bg-gray-400 disabled:cursor-not-allowed">
                        <span ng-show="!vm.partD.isSubmitting">Revert to WSHO</span>
                        <span ng-show="vm.partD.isSubmitting">
                            <i class="fas fa-spinner fa-spin mr-2"></i>Processing...
                        </span>
                    </button>
                    <button type="button"
                            ng-click="vm.submitToHeadLOB()"
                            ng-disabled="vm.partD.isSubmitting"
                            class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 disabled:bg-gray-400 disabled:cursor-not-allowed">
                        <span ng-show="!vm.partD.isSubmitting">Submit to Head LOB</span>
                        <span ng-show="vm.partD.isSubmitting">
                            <i class="fas fa-spinner fa-spin mr-2"></i>Submitting...
                        </span>
                    </button>
                </div>

                <div class="mt-6" ng-show="vm.getWorkflowsByAction('04').length > 0">
                    <table class="min-w-full divide-y divide-gray-200 border border-gray-300">
                        <thead class="bg-gray-100">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">To</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Designation</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Date of Submission</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-700 uppercase">Remarks</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <tr ng-repeat="workflow in vm.getWorkflowsByAction('04')">
                                <td class="px-4 py-3 text-sm text-gray-900">
                                    <div ng-bind-html="workflow.toName || 'N/A'"></div>
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-900">
                                    <div ng-bind-html="workflow.toDesignation || 'N/A'"></div>
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-900">
                                    {{workflow.date | date:'dd-MMM-yyyy HH:mm' || 'N/A'}}
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-900">
                                    <div>{{ workflow.remarks }}</div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </fieldset>
    </form>
</div>