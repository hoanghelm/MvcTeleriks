@{
    ViewData["Title"] = "Update Incident Report";
}

@section Styles {
    <link rel="stylesheet" href="~/css/telerik-controls-standardized.css" />
    <link rel="stylesheet" href="~/css/incident/incident-update.css" />
    <link rel="stylesheet" href="~/css/components/employee-search.css" />
}

<div ng-app="incidentUpdateApp" ng-controller="IncidentUpdateController as vm" class="p-6 max-w-7xl mx-auto">
    <!-- Loading Indicator -->
    <div ng-show="vm.loading" class="flex justify-center items-center py-12">
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="sr-only">Loading...</span>
            </div>
            <p class="mt-2 text-gray-600">Loading incident data...</p>
        </div>
    </div>

    <!-- Error Message -->
    <div ng-show="vm.error" class="mb-4 p-4 bg-red-50 border border-red-200 text-red-700 rounded">
        <strong>Error:</strong> {{vm.error}}
    </div>

    <!-- Main Content -->
    <div ng-show="!vm.loading && !vm.error">
        <!-- Header -->
        <div class="mb-6">
            <div class="flex justify-between items-start">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900 mb-2">
                        Incident Report - {{vm.incident.incidentId}}
                    </h1>
                    <div class="flex items-center gap-4 text-sm text-gray-600">
                        <span>Status: <span class="font-semibold text-blue-600">{{vm.incident.statusName || vm.incident.status}}</span></span>
                        <span>•</span>
                        <span>Created: {{vm.incident.creationDate || vm.incident.createdDate}}</span>
                        <span ng-show="vm.incident.modifyDate">•</span>
                        <span ng-show="vm.incident.modifyDate">Modified: {{vm.incident.modifyDate}}</span>
                    </div>
                </div>
                <div class="flex gap-2">
                    <button class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300" onclick="window.history.back()">
                        Back to List
                    </button>
                </div>
            </div>
        </div>

        <!-- Tab Navigation -->
        <div class="mb-6 border-b border-gray-200">
            <div class="flex space-x-1">
                <button ng-click="vm.activeTab = 'A'"
                        ng-class="{'border-blue-500 text-blue-600': vm.activeTab === 'A', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': vm.activeTab !== 'A'}"
                        class="px-6 py-3 border-b-2 font-medium text-sm focus:outline-none transition-colors">
                    <div class="flex items-center gap-2">
                        <div ng-class="{'bg-blue-500 text-white': vm.activeTab === 'A', 'bg-gray-300 text-gray-700': vm.activeTab !== 'A'}"
                             class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold">
                            A
                        </div>
                        <span>Initial Report</span>
                    </div>
                </button>

                <button ng-show="vm.canViewPartB()"
                        ng-click="vm.activeTab = 'B'"
                        ng-class="{'border-blue-500 text-blue-600': vm.activeTab === 'B', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': vm.activeTab !== 'B'}"
                        class="px-6 py-3 border-b-2 font-medium text-sm focus:outline-none transition-colors">
                    <div class="flex items-center gap-2">
                        <div ng-class="{'bg-blue-500 text-white': vm.activeTab === 'B', 'bg-gray-300 text-gray-700': vm.activeTab !== 'B'}"
                             class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold">
                            B
                        </div>
                        <span>HOD Review</span>
                    </div>
                </button>

                <button ng-show="vm.canViewPartC()"
                        ng-click="vm.activeTab = 'C'"
                        ng-class="{'border-blue-500 text-blue-600': vm.activeTab === 'C', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': vm.activeTab !== 'C'}"
                        class="px-6 py-3 border-b-2 font-medium text-sm focus:outline-none transition-colors">
                    <div class="flex items-center gap-2">
                        <div ng-class="{'bg-blue-500 text-white': vm.activeTab === 'C', 'bg-gray-300 text-gray-700': vm.activeTab !== 'C'}"
                             class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold">
                            C
                        </div>
                        <span>WSHO Investigation</span>
                    </div>
                </button>

                <button ng-show="vm.canViewPartD()"
                        ng-click="vm.activeTab = 'D'"
                        ng-class="{'border-blue-500 text-blue-600': vm.activeTab === 'D', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': vm.activeTab !== 'D'}"
                        class="px-6 py-3 border-b-2 font-medium text-sm focus:outline-none transition-colors">
                    <div class="flex items-center gap-2">
                        <div ng-class="{'bg-blue-500 text-white': vm.activeTab === 'D', 'bg-gray-300 text-gray-700': vm.activeTab !== 'D'}"
                             class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold">
                            D
                        </div>
                        <span>HOD Comment</span>
                    </div>
                </button>

                <button ng-show="vm.canViewPartE()"
                        ng-click="vm.activeTab = 'E'"
                        ng-class="{'border-blue-500 text-blue-600': vm.activeTab === 'E', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': vm.activeTab !== 'E'}"
                        class="px-6 py-3 border-b-2 font-medium text-sm focus:outline-none transition-colors">
                    <div class="flex items-center gap-2">
                        <div ng-class="{'bg-blue-500 text-white': vm.activeTab === 'E', 'bg-gray-300 text-gray-700': vm.activeTab !== 'E'}"
                             class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold">
                            E
                        </div>
                        <span>Head LOB Comment</span>
                    </div>
                </button>

                <button ng-show="vm.canViewPartF()"
                        ng-click="vm.activeTab = 'F'"
                        ng-class="{'border-blue-500 text-blue-600': vm.activeTab === 'F', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': vm.activeTab !== 'F'}"
                        class="px-6 py-3 border-b-2 font-medium text-sm focus:outline-none transition-colors">
                    <div class="flex items-center gap-2">
                        <div ng-class="{'bg-blue-500 text-white': vm.activeTab === 'F', 'bg-gray-300 text-gray-700': vm.activeTab !== 'F'}"
                             class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold">
                            F
                        </div>
                        <span>Corrective Actions</span>
                    </div>
                </button>

                <button ng-show="vm.canViewPartG()"
                        ng-click="vm.activeTab = 'G'"
                        ng-class="{'border-blue-500 text-blue-600': vm.activeTab === 'G', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': vm.activeTab !== 'G'}"
                        class="px-6 py-3 border-b-2 font-medium text-sm focus:outline-none transition-colors">
                    <div class="flex items-center gap-2">
                        <div ng-class="{'bg-blue-500 text-white': vm.activeTab === 'G', 'bg-gray-300 text-gray-700': vm.activeTab !== 'G'}"
                             class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold">
                            G
                        </div>
                        <span>WSHO Verification</span>
                    </div>
                </button>

                <button ng-show="vm.canViewPartH()"
                        ng-click="vm.activeTab = 'H'"
                        ng-class="{'border-blue-500 text-blue-600': vm.activeTab === 'H', 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300': vm.activeTab !== 'H'}"
                        class="px-6 py-3 border-b-2 font-medium text-sm focus:outline-none transition-colors">
                    <div class="flex items-center gap-2">
                        <div ng-class="{'bg-blue-500 text-white': vm.activeTab === 'H', 'bg-gray-300 text-gray-700': vm.activeTab !== 'H'}"
                             class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-bold">
                            H
                        </div>
                        <span>Closure</span>
                    </div>
                </button>
            </div>
        </div>

        <!-- Tab Content -->
        <div class="bg-white rounded-lg shadow">
            <!-- Part A Content -->
            <div ng-show="vm.activeTab === 'A'" class="p-6">
                @Html.Partial("_PartA")
            </div>

            <!-- Part B Content -->
            <div ng-show="vm.activeTab === 'B' && vm.canViewPartB()" class="p-6">
                @Html.Partial("_PartB")
            </div>

            <!-- Part C Content -->
            <div ng-show="vm.activeTab === 'C' && vm.canViewPartC()" class="p-6">
                @Html.Partial("_PartC")
            </div>

            <!-- Part D Content -->
            <div ng-show="vm.activeTab === 'D' && vm.canViewPartD()" class="p-6">
                @Html.Partial("_PartD")
            </div>

            <!-- Part E Content -->
            <div ng-show="vm.activeTab === 'E' && vm.canViewPartE()" class="p-6">
                @Html.Partial("_PartE")
            </div>

            <!-- Part F Content -->
            <div ng-show="vm.activeTab === 'F' && vm.canViewPartF()" class="p-6">
                @Html.Partial("_PartF")
            </div>

            <!-- Part G Content -->
            <div ng-show="vm.activeTab === 'G' && vm.canViewPartG()" class="p-6">
                @Html.Partial("_PartG")
            </div>

            <!-- Part H Content -->
            <div ng-show="vm.activeTab === 'H' && vm.canViewPartH()" class="p-6">
                @Html.Partial("_PartH")
            </div>
        </div>

        <!-- Audit Log - Always Visible -->
        @Html.Partial("_AuditLog")
    </div>
</div>

@{
    var employeeSearchModel = new WIRS.Mvc.ViewModels.EmployeeSearchViewModel("employeeSearchWindow", "employeeSearchGrid", "onEmployeeSearchSelect");
}
@Html.Partial("~/Views/Shared/Modal/_EmployeeSearchModal.cshtml", employeeSearchModel)

@section Scripts {
    <script src="~/lib/kendo-ui/js/angular.min.js"></script>
    <script src="~/lib/kendo-ui/js/kendo.angular.min.js"></script>
    <script src="~/js/components/employee-search.js"></script>
    <script src="~/js/incident/incident-update-app.js"></script>
    <script src="~/js/incident/incident-update-service.js"></script>
    <script src="~/js/incident/incident-update-part-a-service.js"></script>
    <script src="~/js/incident/incident-update-part-b-service.js"></script>
    <script src="~/js/incident/incident-update-part-c-service.js"></script>
    <script src="~/js/incident/incident-update-part-d-service.js"></script>
    <script src="~/js/incident/incident-update-part-e-service.js"></script>
    <script src="~/js/incident/incident-update-part-f-service.js"></script>
    <script src="~/js/incident/incident-update-part-g-service.js"></script>
    <script src="~/js/incident/incident-update-part-h-service.js"></script>
    <script src="~/js/incident/incident-update-controller.js"></script>

    <script>
        $(document).ready(function() {
            window.employeeSearchInstance = EmployeeSearchComponent.create({
                modalId: 'employeeSearchWindow',
                gridId: 'employeeSearchGrid',
                onSelectCallback: 'onEmployeeSearchSelect'
            });
        });

        function onEmployeeSearchSelect(employee) {
            console.log('Employee selected:', employee);
        }

        window.openEmployeeSearch = function(searchType, callback) {
            if (window.employeeSearchInstance) {
                window.onEmployeeSearchSelect = function(employee) {
                    var mappedEmployee = {
                        name: employee.EmployeeName,
                        empId: employee.EmployeeId,
                        contactNo: employee.ContactNo,
                        designation: employee.Designation,
                        age: employee.Age,
                        race: employee.Race,
                        nationality: employee.Nationality,
                        gender: employee.Gender,
                        employmentType: employee.EmploymentType,
                        dateOfEmployment: employee.DateOfEmployment
                    };
                    callback(mappedEmployee);
                };

                window.employeeSearchInstance.open();
            }
        };
    </script>
}
