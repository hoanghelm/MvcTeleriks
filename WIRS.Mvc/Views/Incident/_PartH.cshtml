<div class="bg-white shadow-md rounded-lg p-6">
    <fieldset class="border border-gray-300 rounded-lg p-6 bg-gray-50">
        <legend class="text-lg font-semibold text-gray-900 px-2">Part H - Closure By Chairman WSH Committee</legend>

        <div class="space-y-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    Review & Comment
                    <span class="text-red-600">*</span>
                </label>
                <textarea kendo-text-area
                          k-ng-model="vm.partH.comments"
                          style="width: 100%;"
                          k-enable="!vm.partH.isReadOnly"
                          maxlength="4000"
                          required></textarea>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Name</label>
                    <div class="mt-1 text-gray-900">
                        {{ vm.partH.submitterName || vm.currentUser.name }}
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Employee Number</label>
                    <div class="mt-1 text-gray-900">
                        {{ vm.partH.submitterEmpId || vm.currentUser.userId }}
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700">Date of Submission</label>
                    <div class="mt-1 text-gray-900">
                        {{ vm.partH.submittedDate || vm.getCurrentDate() }}
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700">Designation</label>
                    <div class="mt-1 text-gray-900">
                        {{ vm.partH.submitterDesignation || vm.currentUser.designation }}
                    </div>
                </div>
            </div>

            <div ng-show="!vm.partH.isReadOnly">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Name of WSHO</label>
                    <select kendo-drop-down-list
                            k-ng-model="vm.partH.wshoId"
                            k-data-text-field="'name'"
                            k-data-value-field="'userId'"
                            k-data-source="vm.partH.wshoList"
                            k-option-label="'Select WSHO...'"
                            style="width: 100%;"></select>
                </div>

                <div class="mt-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email To</label>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div ng-repeat="person in vm.emailToListPartH">
                            <label class="flex items-center space-x-2">
                                <input type="checkbox"
                                       ng-model="person.selected"
                                       class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                <span class="text-sm text-gray-700">{{ person.name }}</span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="mt-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Copy To</label>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-xs text-gray-600">Name</label>
                            <div class="flex gap-2">
                                <input type="text"
                                       ng-model="vm.partH.copyTo.name"
                                       class="flex-1 px-3 py-2 border border-gray-300 rounded-md"
                                       readonly />
                                <button type="button"
                                        ng-click="vm.searchPartHCopyTo()"
                                        class="px-3 py-2 bg-gray-200 hover:bg-gray-300 rounded-md">
                                    ...
                                </button>
                            </div>
                        </div>
                        <div>
                            <label class="block text-xs text-gray-600">Employee Number</label>
                            <input type="text"
                                   ng-model="vm.partH.copyTo.employeeNo"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md"
                                   readonly />
                        </div>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                        <div>
                            <label class="block text-xs text-gray-600">Designation</label>
                            <input type="text"
                                   ng-model="vm.partH.copyTo.designation"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md"
                                   readonly />
                        </div>
                        <div class="flex items-end">
                            <button type="button"
                                    ng-click="vm.addPartHCopyTo()"
                                    class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                                Add
                            </button>
                        </div>
                    </div>

                    <div ng-show="vm.partH.additionalCopyToList.length > 0" class="mt-4">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                                    <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Employee No</th>
                                    <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Designation</th>
                                    <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Action</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <tr ng-repeat="person in vm.partH.additionalCopyToList">
                                    <td class="px-3 py-2 text-sm text-gray-900">{{ person.name }}</td>
                                    <td class="px-3 py-2 text-sm text-gray-900">{{ person.employeeNo }}</td>
                                    <td class="px-3 py-2 text-sm text-gray-900">{{ person.designation }}</td>
                                    <td class="px-3 py-2 text-sm">
                                        <button type="button"
                                                ng-click="vm.removePartHCopyToPerson($index)"
                                                class="text-red-600 hover:text-red-900">
                                            Remove
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div ng-show="!vm.partH.isReadOnly" class="flex gap-4 mt-6">
                <button type="button"
                        ng-click="vm.revertPartHToWSHO()"
                        class="px-6 py-2 bg-yellow-600 text-white rounded-md hover:bg-yellow-700"
                        ng-disabled="vm.partH.isSubmitting">
                    {{ vm.partH.isSubmitting ? 'Processing...' : 'Revert to WSHO' }}
                </button>
                <button type="button"
                        ng-click="vm.closeReport()"
                        class="px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-700"
                        ng-disabled="vm.partH.isSubmitting">
                    {{ vm.partH.isSubmitting ? 'Processing...' : 'Close Report' }}
                </button>
            </div>

            <div ng-show="vm.partH.workflowHistory.length > 0" class="mt-8">
                <h3 class="text-md font-semibold text-gray-900 mb-4">Workflow History</h3>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200 border border-gray-300">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">From</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">To</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Remarks</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <tr ng-repeat="workflow in vm.partH.workflowHistory">
                                <td class="px-4 py-2 text-sm text-gray-900">{{ workflow.fromName }}</td>
                                <td class="px-4 py-2 text-sm text-gray-900">{{ workflow.toName }}</td>
                                <td class="px-4 py-2 text-sm text-gray-900">{{ workflow.actionRole }}</td>
                                <td class="px-4 py-2 text-sm text-gray-900">{{ workflow.remarks }}</td>
                                <td class="px-4 py-2 text-sm text-gray-900">{{ workflow.date | date:'dd/MM/yyyy HH:mm' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </fieldset>
</div>
