@* Part H - Closure By Chairman WSH Committee *@

<div class="bg-white shadow-md rounded-lg p-6">
    <div class="mb-6">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">Part H - Closure By Chairman WSH Committee</h3>
    </div>

    <div ng-show="vm.partH.validationMessage" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        {{ vm.partH.validationMessage }}
    </div>

    <div ng-show="vm.partH.successMessage" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        {{ vm.partH.successMessage }}
    </div>

    <form name="partHForm" novalidate>
        <fieldset class="border border-gray-300 rounded-lg p-6 bg-gray-50">
            <legend class="text-lg font-semibold text-gray-900 px-2">Closure Details</legend>

            <div class="space-y-6">
                <div class="form-group">
                    <label for="partH_comments" class="block text-sm font-medium text-gray-700 mb-1 required">
                        Review & Comment
                    </label>
                    <textarea kendo-text-area
                              k-ng-model="vm.partH.comments"
                              k-rows="6"
                              id="partH_comments"
                              name="partHComments"
                              style="width: 100%;"
                              k-enable="!vm.partH.isReadOnly"
                              maxlength="4000"
                              required></textarea>
                    <div class="flex justify-between items-center mt-1">
                        <span class="text-red-600 text-sm" ng-show="!vm.partH.isReadOnly && partHForm.partHComments.$touched && partHForm.partHComments.$invalid">
                            Review & Comment is required
                        </span>
                        <span class="text-sm text-gray-500">{{ vm.partH.comments ? vm.partH.comments.length : 0 }} / 4000 characters</span>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                        <p class="mt-1 text-gray-900">{{ vm.partH.submitterName || vm.currentUser.name }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Employee Number</label>
                        <p class="mt-1 text-gray-900">{{ vm.partH.submitterEmpId || vm.currentUser.userId }}</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Designation</label>
                        <p class="mt-1 text-gray-900">{{ vm.partH.submitterDesignation || vm.currentUser.designation }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Date of Submission</label>
                        <p class="mt-1 text-gray-900">{{ vm.partH.submissionDate || vm.getCurrentDate() }}</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6" ng-show="!vm.partH.isReadOnly">
                    <div class="form-group">
                        <label for="partH_wsho" class="block text-sm font-medium text-gray-700 mb-1">
                            Name of WSHO
                        </label>
                        <select kendo-drop-down-list
                                k-options="vm.partH.wshoOptions"
                                k-ng-model="vm.partH.wshoId"
                                id="partH_wsho"
                                name="partHWsho"
                                class="w-full">
                        </select>
                    </div>
                </div>

                <div ng-show="!vm.partH.isReadOnly">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Copy To</label>
                    <div class="space-y-2 mb-3">
                        <div ng-repeat="person in vm.emailToListPartH" class="flex items-center">
                            <input type="checkbox"
                                   id="emailToPartH{{ $index }}"
                                   ng-model="person.selected"
                                   class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                            <label for="emailToPartH{{ $index }}" class="ml-2 block text-sm text-gray-700">
                                {{ person.name }} ({{ person.designation }})
                            </label>
                        </div>
                    </div>

                    <div class="mt-3">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div class="form-group">
                                <label for="partH_copyToName" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                                <div class="flex gap-2">
                                    <input type="text"
                                           id="partH_copyToName"
                                           ng-model="vm.partH.copyToPerson.name"
                                           class="flex-1 px-3 py-2 border border-gray-300 rounded-md"
                                           readonly />
                                    <button type="button"
                                            ng-click="vm.searchPartHCopyTo()"
                                            class="px-3 py-2 bg-gray-200 hover:bg-gray-300 rounded-md">
                                        ...
                                    </button>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="partH_copyToEmpNo" class="block text-sm font-medium text-gray-700 mb-1">Employee Number</label>
                                <input type="text"
                                       id="partH_copyToEmpNo"
                                       ng-model="vm.partH.copyToPerson.employeeNo"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-md"
                                       readonly />
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="form-group">
                                <label for="partH_copyToDesignation" class="block text-sm font-medium text-gray-700 mb-1">Designation</label>
                                <input type="text"
                                       id="partH_copyToDesignation"
                                       ng-model="vm.partH.copyToPerson.designation"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-md"
                                       readonly />
                            </div>
                            <div class="form-group flex items-end">
                                <button type="button"
                                        ng-click="vm.addPartHCopyTo()"
                                        class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                                    Add
                                </button>
                            </div>
                        </div>
                    </div>

                    <div ng-show="vm.partH.additionalCopyToList.length > 0" class="mt-4">
                        <table class="min-w-full divide-y divide-gray-200 border border-gray-300">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                                    <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Employee No</th>
                                    <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Designation</th>
                                    <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Action</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <tr ng-repeat="person in vm.partH.additionalCopyToList">
                                    <td class="px-3 py-2 text-sm text-gray-900">{{ person.name }}</td>
                                    <td class="px-3 py-2 text-sm text-gray-900">{{ person.employeeNo }}</td>
                                    <td class="px-3 py-2 text-sm text-gray-900">{{ person.designation }}</td>
                                    <td class="px-3 py-2 text-sm">
                                        <button type="button"
                                                ng-click="vm.removePartHCopyToPerson($index)"
                                                class="text-red-600 hover:text-red-900">
                                            Remove
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div ng-show="!vm.partH.isReadOnly" class="flex justify-end gap-4 mt-6">
                    <button type="button"
                            ng-click="vm.revertPartHToWSHO()"
                            class="px-6 py-2 bg-yellow-600 text-white rounded-md hover:bg-yellow-700"
                            ng-disabled="vm.partH.isSubmitting">
                        <span ng-show="!vm.partH.isSubmitting">Revert to WSHO</span>
                        <span ng-show="vm.partH.isSubmitting">Processing...</span>
                    </button>
                    <button type="button"
                            ng-click="vm.closeReport()"
                            class="px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-700"
                            ng-disabled="vm.partH.isSubmitting">
                        <span ng-show="!vm.partH.isSubmitting">Close Report</span>
                        <span ng-show="vm.partH.isSubmitting">Processing...</span>
                    </button>
                </div>

                <div ng-show="vm.partH.workflowHistory.length > 0" class="mt-8">
                    <h3 class="text-md font-semibold text-gray-900 mb-4">Workflow History</h3>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200 border border-gray-300">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">From</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">To</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Role</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Remarks</th>
                                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <tr ng-repeat="workflow in vm.partH.workflowHistory">
                                    <td class="px-4 py-2 text-sm text-gray-900">{{ workflow.fromName }}</td>
                                    <td class="px-4 py-2 text-sm text-gray-900">{{ workflow.toName }}</td>
                                    <td class="px-4 py-2 text-sm text-gray-900">{{ workflow.actionRole }}</td>
                                    <td class="px-4 py-2 text-sm text-gray-900">{{ workflow.remarks }}</td>
                                    <td class="px-4 py-2 text-sm text-gray-900">{{ workflow.date | date:'dd/MM/yyyy HH:mm' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
</div>
