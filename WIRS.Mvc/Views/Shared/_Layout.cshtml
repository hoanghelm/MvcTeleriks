<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WIRS</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/11.0.2/default/default-ocean-blue.css" />
    <!-- Bootstrap CSS only for dropdown component -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/tailwind-custom.css" asp-append-version="true" />
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'inter': ['Inter', 'sans-serif']
                    },
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8'
                        },
                        secondary: {
                            500: '#8b5cf6',
                            600: '#7c3aed'
                        }
                    }
                }
            }
        }
    </script>
    
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://unpkg.com/jszip/dist/jszip.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2025.2.520/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2025.2.520/js/kendo.aspnetmvc.min.js"></script>
    <script src="~/telerik-license.js"></script>
</head>
<body>
    <nav class="sticky top-0 z-50 bg-gradient-to-r from-slate-800 to-slate-900 shadow-lg border-b border-slate-700 backdrop-blur-sm bg-opacity-95">
        <div class="max-w-full px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo/Brand -->
                <a class="flex items-center space-x-3 text-white hover:text-blue-200 transition-colors" href="/Home">
                    <div class="flex items-center justify-center w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg shadow-md">
                        <i class="k-icon k-i-shield text-white text-xl"></i>
                    </div>
                    <span class="text-xl font-bold">WIRS</span>
                </a>

                <!-- Mobile menu button -->
                <button class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-gray-300 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>

                <!-- Desktop menu -->
                <div class="hidden md:block">
                    <div class="flex items-center space-x-4">
                        <!-- Main menu will be populated by JS -->
                        <div id="mainMenu" class="flex space-x-4"></div>

                        <!-- User dropdown -->
                        <div class="relative dropdown">
                            <a class="flex items-center space-x-2 text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium transition-colors dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <div class="flex items-center justify-center w-8 h-8 bg-gray-600 rounded-full">
                                    <i class="k-icon k-i-user text-white text-sm"></i>
                                </div>
                                <span>User</span>
                                <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                                </svg>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="k-icon k-i-user me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" href="#"><i class="k-icon k-i-gear me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="#" onclick="logout()"><i class="k-icon k-i-logout me-2"></i>Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Mobile menu -->
                <div class="collapse navbar-collapse md:hidden" id="navbarNav">
                    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-slate-800 mt-2 rounded-lg">
                        <div id="mainMenuMobile" class="space-y-2"></div>
                        <div class="border-t border-gray-700 pt-4">
                            <a class="block px-3 py-2 text-gray-300 hover:text-white transition-colors" href="#"><i class="k-icon k-i-user me-2"></i>Profile</a>
                            <a class="block px-3 py-2 text-gray-300 hover:text-white transition-colors" href="#"><i class="k-icon k-i-gear me-2"></i>Settings</a>
                            <a class="block px-3 py-2 text-red-400 hover:text-red-300 transition-colors" href="#" onclick="logout()"><i class="k-icon k-i-logout me-2"></i>Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <main class="min-h-screen bg-gray-50">
        @RenderBody()
    </main>

    <!-- Bootstrap JS for dropdown functionality -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/menu-system.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>