@* Refactored to use JavaScript framework - no more ViewBag dependency *@
@(Html.Kendo().DropDownList()
    .Name(ViewData.TemplateInfo.GetFullHtmlFieldName(""))
    .DataTextField("Value")
    .DataValueField("Code")
    .OptionLabel("Select Location")
    .HtmlAttributes(new { @class = "form-control", style = "width: 100%" })
    .AutoBind(false)
)

<script>
$(document).ready(function() {
    $(document).on('framework:ready', function() {
        // Initialize location dropdown using the framework
        const fieldName = '@ViewData.TemplateInfo.GetFullHtmlFieldName("")';
        const locationDropdown = window.DropdownFactory.createLocationDropdown('#' + fieldName);

        // Store reference for cleanup if needed
        if (!window.pageDropdowns) {
            window.pageDropdowns = {};
        }
        window.pageDropdowns[fieldName] = locationDropdown;
    });
});
</script>