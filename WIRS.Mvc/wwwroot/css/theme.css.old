:root {
    /* Modern CMS Portal Colors */
    --primary-color: #3b82f6;
    --primary-dark: #1d4ed8;
    --primary-light: #93c5fd;
    --secondary-color: #6366f1;
    --accent-color: #8b5cf6;
    --success-color: #10b981;
    --warning-color: #f59e0b;
    --error-color: #ef4444;
    --info-color: #06b6d4;
    
    /* Modern Neutral Palette */
    --surface-color: #ffffff;
    --background-color: #f8fafc;
    --sidebar-bg: #1e293b;
    --sidebar-hover: #334155;
    --card-background: #ffffff;
    --text-primary: #0f172a;
    --text-secondary: #64748b;
    --text-muted: #94a3b8;
    --text-inverse: #f8fafc;
    --divider-color: #e2e8f0;
    --border-light: #e2e8f0;
    
    /* Modern Shadows */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    
    /* Modern Border Radius */
    --border-radius-sm: 4px;
    --border-radius: 6px;
    --border-radius-lg: 8px;
    --border-radius-xl: 12px;
    --border-radius-2xl: 16px;
    
    /* Modern Transitions */
    --transition-fast: all 0.15s ease-out;
    --transition: all 0.2s ease-out;
    --transition-slow: all 0.3s ease-out;
    
    /* Typography */
    --font-size-xs: 0.75rem;
    --font-size-sm: 0.875rem;
    --font-size-base: 1rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.5rem;
    --font-size-3xl: 1.875rem;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background-color: var(--background-color);
    color: var(--text-primary);
    line-height: 1.6;
    font-size: 0.875rem !important;
}

.btn {
    border-radius: var(--border-radius);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: var(--transition);
    box-shadow: var(--shadow-1);
}

.btn:hover {
    box-shadow: var(--shadow-2);
    transform: translateY(-1px);
}

.btn-primary {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
}

.btn-primary:hover, .btn-primary:focus {
    background-color: var(--primary-dark);
    border-color: var(--primary-dark);
}

.btn-secondary {
    background-color: var(--secondary-color);
    border-color: var(--secondary-color);
}

.btn-success {
    background-color: var(--success-color);
    border-color: var(--success-color);
}

.btn-danger {
    background-color: var(--error-color);
    border-color: var(--error-color);
}

.btn-warning {
    background-color: var(--warning-color);
    border-color: var(--warning-color);
}

.btn-info {
    background-color: var(--info-color);
    border-color: var(--info-color);
}

.card {
    background-color: var(--surface-color);
    border: none;
    border-radius: var(--border-radius-large);
    box-shadow: var(--shadow-1);
    transition: var(--transition);
}

.card:hover {
    box-shadow: var(--shadow-2);
}

.card-header {
    background-color: transparent;
    border-bottom: 1px solid var(--divider-color);
    font-weight: 500;
}

.form-control {
    border: 1px solid var(--divider-color);
    border-radius: var(--border-radius);
    transition: var(--transition);
}

.form-control:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.2rem rgba(25, 118, 210, 0.25);
}

.table {
    background-color: var(--surface-color);
}

.table thead th {
    border-bottom: 2px solid var(--divider-color);
    font-weight: 500;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.875rem;
}

.table td {
    border-bottom: 1px solid var(--divider-color);
}

.alert {
    border: none;
    border-radius: var(--border-radius);
}

.alert-primary {
    background-color: rgba(25, 118, 210, 0.1);
    color: var(--primary-dark);
}

.alert-success {
    background-color: rgba(76, 175, 80, 0.1);
    color: #2e7d32;
}

.alert-warning {
    background-color: rgba(255, 152, 0, 0.1);
    color: #e65100;
}

.alert-danger {
    background-color: rgba(244, 67, 54, 0.1);
    color: #c62828;
}

.main-navbar {
    background: var(--surface-color) !important;
    border-bottom: 1px solid var(--divider-color);
    box-shadow: var(--shadow-sm);
    padding: 0.75rem 0;
    position: sticky;
    top: 0;
    z-index: 1030;
    backdrop-filter: blur(10px);
}

.navbar-brand {
    font-weight: 600 !important;
    color: var(--text-primary) !important;
    font-size: var(--font-size-xl);
    text-decoration: none;
    transition: var(--transition-fast);
}

.navbar-brand:hover {
    color: var(--primary-color) !important;
}

.brand-icon {
    width: 40px;
    height: 40px;
    background: var(--primary-color);
    border-radius: var(--border-radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}

.brand-text {
    font-weight: 600;
    letter-spacing: -0.025em;
}

.nav-link {
    color: var(--text-secondary) !important;
    font-weight: 500;
    font-size: var(--font-size-sm);
    transition: var(--transition-fast);
    padding: 0.5rem 1rem !important;
    border-radius: var(--border-radius);
    margin: 0 0.25rem;
}

.nav-link:hover {
    color: var(--primary-color) !important;
    background-color: var(--primary-light) !important;
    background-color: rgba(59, 130, 246, 0.1) !important;
}

.nav-link.active {
    color: var(--primary-color) !important;
    background-color: rgba(59, 130, 246, 0.1) !important;
    font-weight: 600;
}

.dropdown-menu {
    border: none;
    box-shadow: var(--shadow-xl);
    border-radius: var(--border-radius-lg);
    padding: 0.75rem;
    margin-top: 0.5rem;
    background: white;
    backdrop-filter: blur(20px);
}

.dropdown-item {
    border-radius: var(--border-radius);
    padding: 0.75rem 1rem;
    font-weight: 500;
    transition: var(--transition-fast);
    color: var(--text-primary);
}

.dropdown-item:hover {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
    transform: translateX(4px);
}

.user-dropdown .nav-link {
    background: var(--background-color);
    border: 1px solid var(--divider-color);
    color: var(--text-primary) !important;
}

.user-dropdown .nav-link:hover {
    background-color: var(--background-color);
    border-color: var(--primary-color);
}

.user-avatar {
    width: 32px;
    height: 32px;
    background: var(--primary-color);
    border-radius: var(--border-radius);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}

.user-menu .dropdown-item.text-danger {
    color: var(--error-color) !important;
}

.user-menu .dropdown-item.text-danger:hover {
    background: var(--error-color);
    color: white !important;
}

.main-content {
    min-height: calc(100vh - 90px);
    background: var(--background-color);
}

.breadcrumb {
    background-color: transparent;
    padding: 0.75rem 0;
}

.breadcrumb-item + .breadcrumb-item::before {
    content: ">";
    color: var(--text-secondary);
}

.modal-content {
    border: none;
    border-radius: var(--border-radius-large);
    box-shadow: var(--shadow-3);
}

.modal-header {
    border-bottom: 1px solid var(--divider-color);
}

.modal-footer {
    border-top: 1px solid var(--divider-color);
}

.pagination .page-link {
    color: var(--text-primary);
    border-color: var(--divider-color);
    transition: var(--transition);
}

.pagination .page-link:hover {
    background-color: var(--primary-light);
    color: white;
    border-color: var(--primary-light);
}

.pagination .page-item.active .page-link {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
}

.text-muted {
    color: var(--text-secondary) !important;
}

.border {
    border-color: var(--divider-color) !important;
}

.border-top {
    border-top-color: var(--divider-color) !important;
}

.border-bottom {
    border-bottom-color: var(--divider-color) !important;
}

.border-start {
    border-left-color: var(--divider-color) !important;
}

.border-end {
    border-right-color: var(--divider-color) !important;
}

/* Modern Dashboard Cards */
.dashboard-card {
    background: var(--surface-color);
    border: 1px solid var(--divider-color);
    border-radius: var(--border-radius-xl);
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
    padding: 1.5rem;
}

.dashboard-card:hover {
    box-shadow: var(--shadow-md);
    border-color: var(--primary-light);
    transform: translateY(-1px);
}

.dashboard-card .card-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--border-radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(59, 130, 246, 0.1);
}

.dashboard-card .card-title {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
}

.dashboard-card .card-description {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    margin: 0;
}

.dashboard-card .badge {
    font-size: var(--font-size-sm);
    font-weight: 600;
    padding: 0.5rem 0.75rem;
    border-radius: var(--border-radius-lg);
}

/* Modern Grid Styling */
.grid-container {
    background: var(--surface-color);
    border: 1px solid var(--divider-color);
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
}

.k-grid {
    border: none !important;
    font-family: 'Inter', sans-serif !important;
}

.k-grid-header {
    background: var(--background-color) !important;
    border-bottom: 2px solid var(--divider-color) !important;
}

.k-grid-header th {
    background: transparent !important;
    border: none !important;
    color: var(--text-secondary) !important;
    font-weight: 600 !important;
    font-size: var(--font-size-xs) !important;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 1rem !important;
}

.k-grid tbody tr {
    border-bottom: 1px solid var(--divider-color) !important;
    transition: var(--transition-fast);
}

.k-grid tbody tr:hover {
    background: var(--background-color) !important;
}

.k-grid tbody td {
    padding: 0.875rem 1rem !important;
    border: none !important;
    color: var(--text-primary) !important;
    font-size: var(--font-size-sm) !important;
}

/* Modern Buttons */
.k-button {
    border-radius: var(--border-radius) !important;
    font-weight: 500 !important;
    font-size: var(--font-size-sm) !important;
    transition: var(--transition) !important;
    border: none !important;
}

.k-button-solid-primary {
    background: var(--primary-color) !important;
    color: white !important;
}

.k-button-solid-primary:hover {
    background: var(--primary-dark) !important;
    transform: translateY(-1px);
    box-shadow: var(--shadow-md);
}

.k-button-solid-secondary {
    background: var(--text-secondary) !important;
    color: white !important;
}

.k-button-solid-secondary:hover {
    background: var(--text-primary) !important;
}

.k-button-sm {
    padding: 0.5rem 0.75rem !important;
    font-size: var(--font-size-xs) !important;
}

.k-button-lg {
    padding: 0.75rem 1.5rem !important;
    font-size: var(--font-size-base) !important;
}

/* Modern Forms */
.k-textbox, .k-input {
    border: 1px solid var(--divider-color) !important;
    border-radius: var(--border-radius) !important;
    font-size: var(--font-size-sm) !important;
    transition: var(--transition) !important;
}

.k-textbox:focus, .k-input:focus {
    border-color: var(--primary-color) !important;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1) !important;
}

/* Icons */
.k-icon {
    font-size: var(--font-size-base) !important;
}

.k-icon-xl {
    font-size: var(--font-size-2xl) !important;
}

@media (prefers-color-scheme: dark) {
    :root {
        --primary-color: #90caf9;
        --primary-dark: #42a5f5;
        --primary-light: #e3f2fd;
        --surface-color: #424242;
        --background-color: #303030;
        --text-primary: #ffffff;
        --text-secondary: #b0bec5;
        --divider-color: #616161;
    }
}